{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "lib": ["ES2022", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      // Dominio y Core
      "@domain/*": ["src/domain/*"],
      "@entities/*": ["src/domain/entities/*"],
      "@ports/*": ["src/domain/ports/*"],
      "@use-cases/*": ["src/domain/use-cases/*"],

      // Infraestructura
      "@adapters/*": ["src/adapters/*"],
      "@database/*": ["src/adapters/database/*"],
      "@external/*": ["src/adapters/external/*"],

      // Interfaces
      "@http/*": ["src/interfaces/http/*"],
      "@controllers/*": ["src/interfaces/http/controllers/*"],
      "@middlewares/*": ["src/interfaces/http/middlewares/*"],
      "@messaging/*": ["src/interfaces/messaging/*"],

      // Shared y Utils
      "@shared/*": ["src/shared/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@constants/*": ["src/shared/constants/*"],

      // Configuraci√≥n y Tipos
      "@config/*": ["./config/*"],
      "@typings/*": ["src/typings/*"],

      // Root
      "@/*": ["src/*"]
    },
    "rootDir": "./",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["**/*.ts", "tsconfig.json", "config/json/*.json", "src/typings/.d.ts", "src/**/*", "./**/*.json"],
  "exclude": ["node_modules", "dist", "build"]
}
