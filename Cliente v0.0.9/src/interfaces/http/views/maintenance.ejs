<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Sitio en mantenimiento - Nebura">
  <meta name="author" content="Nebura Team">
  <title>Sitio en Mantenimiento - Nebura</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">

  <style>
    :root {
      --primary-color: #6a5af9;
      --primary-color-hover: #5a4af7;
      --secondary-color: #f72585;
      --success-color: #4cc9f0;
      --warning-color: #ffc107;
      --danger-color: #dc3545;
      --info-color: #17a2b8;
      --background-color-dark: #121212;
      --card-bg-dark: #1e1e1e;
      --card-bg-dark-hover: #252525;
      --text-color-dark: #e0e0e0;
      --text-muted-dark: #aaa;
      --input-bg-dark: #2a2a2a;
      --input-border-dark: #333;
      --border-color-dark: #333;
      --border-radius: 0.75rem;
      --border-radius-sm: 0.5rem;
      --box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      --box-shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
      --transition-speed: 0.3s;
      --font-family: "Poppins", sans-serif;
      --primary-gradient: linear-gradient(135deg, var(--primary-color), #8a7cff);
      --secondary-gradient: linear-gradient(135deg, var(--secondary-color), #ff4da6);
      --success-gradient: linear-gradient(135deg, var(--success-color), #6bd5f5);
      --warning-gradient: linear-gradient(135deg, var(--warning-color), #ffd351);
      --danger-gradient: linear-gradient(135deg, var(--danger-color), #e83e8c);
      --info-gradient: linear-gradient(135deg, var(--info-color), #5bc0de);
    }

    body {
      font-family: var(--font-family);
      background-color: var(--background-color-dark);
      color: var(--text-color-dark);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      overflow-x: hidden;
    }

    /* Navbar */
    .navbar {
      background: var(--card-bg-dark);
      box-shadow: var(--box-shadow);
      border-bottom: 1px solid var(--input-border-dark);
      padding: 1rem 0;
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.3rem;
      display: flex;
      align-items: center;
      color: var(--text-color-dark);
    }

    .navbar-brand i {
      color: var(--primary-color);
      margin-right: 0.5rem;
    }

    /* Contenido Principal */
    .maintenance-container {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      position: relative;
    }

    .maintenance-card {
      background: var(--card-bg-dark);
      border-radius: var(--border-radius);
      padding: 3rem;
      text-align: center;
      max-width: 800px;
      box-shadow: var(--box-shadow);
      position: relative;
      overflow: hidden;
      border: 1px solid var(--input-border-dark);
      z-index: 2;
    }

    .maintenance-card::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(106, 90, 249, 0.1) 0%, transparent 70%);
      animation: rotate 20s linear infinite;
      z-index: -1;
    }

    @keyframes rotate {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    .maintenance-icon {
      font-size: 5rem;
      color: var(--primary-color);
      margin-bottom: 1.5rem;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.1);
      }

      100% {
        transform: scale(1);
      }
    }

    h1.maintenance-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--primary-color);
    }

    .maintenance-message {
      font-size: 1.1rem;
      opacity: 0.9;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .progress-container {
      width: 100%;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50px;
      height: 10px;
      margin: 2rem 0;
      overflow: hidden;
    }

    .progress-bar {
      height: 100%;
      background: var(--primary-gradient);
      border-radius: 50px;
      width: 65%;
      animation: progress-animation 3s ease-in-out infinite;
    }

    @keyframes progress-animation {
      0% {
        width: 65%;
      }

      50% {
        width: 75%;
      }

      100% {
        width: 65%;
      }
    }

    .countdown {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin: 2rem 0;
    }

    .countdown-item {
      background: rgba(106, 90, 249, 0.1);
      border-radius: 0.5rem;
      padding: 1rem;
      min-width: 80px;
    }

    .countdown-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary-color);
    }

    .countdown-label {
      font-size: 0.8rem;
      opacity: 0.7;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .btn-maintenance {
      background: var(--primary-gradient);
      color: white;
      border: none;
      padding: 0.8rem 2rem;
      border-radius: 50px;
      font-weight: 500;
      font-size: 1rem;
      transition: all var(--transition-speed) ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      box-shadow: 0 4px 15px rgba(106, 90, 249, 0.3);
    }

    .btn-maintenance:hover {
      background: linear-gradient(135deg, #5a4af7, #7a6cff);
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(106, 90, 249, 0.4);
    }

    .btn-maintenance i {
      transition: transform 0.3s ease;
    }

    .btn-maintenance:hover i {
      transform: translateX(3px);
    }

    /* Footer */
    .maintenance-footer {
      text-align: center;
      padding: 1.5rem;
      font-size: 0.9rem;
      opacity: 0.7;
      border-top: 1px solid rgba(106, 90, 249, 0.1);
    }

    /* Partículas decorativas */
    .particle {
      position: absolute;
      background: rgba(106, 90, 249, 0.3);
      border-radius: 50%;
      pointer-events: none;
      z-index: 1;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .maintenance-card {
        padding: 2rem 1.5rem;
      }

      h1.maintenance-title {
        font-size: 2rem;
      }

      .maintenance-icon {
        font-size: 4rem;
      }

      .countdown {
        gap: 1rem;
      }

      .countdown-item {
        min-width: 70px;
        padding: 0.8rem;
      }

      .countdown-value {
        font-size: 1.5rem;
      }
    }
  </style>
</head>

<body>
  <!-- Partículas decorativas -->
  <div class="particle" style="width:8px; height:8px; top:20%; left:10%;"></div>
  <div class="particle" style="width:5px; height:5px; top:70%; left:85%;"></div>
  <div class="particle" style="width:6px; height:6px; top:40%; left:30%;"></div>
  <div class="particle" style="width:4px; height:4px; top:60%; left:60%;"></div>
  <div class="particle" style="width:7px; height:7px; top:30%; left:80%;"></div>

  <header class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="#">
        <i class="fas fa-server"></i>Nebura
      </a>
    </div>
  </header>

  <main class="maintenance-container">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="maintenance-card animate__animated animate__fadeIn">
            <div class="maintenance-icon">
              <i class="fas fa-tools"></i>
            </div>

            <h1 class="maintenance-title">Estamos realizando mantenimiento</h1>

            <p class="maintenance-message">
              Nuestro sitio está experimentando mejoras y actualizaciones para ofrecerte una mejor experiencia.
              Estamos trabajando diligentemente para volver a estar en línea lo antes posible.
            </p>

            <div class="progress-container">
              <div class="progress-bar"></div>
            </div>

            <div class="countdown">
              <div class="countdown-item">
                <div class="countdown-value" id="days">00</div>
                <div class="countdown-label">Días</div>
              </div>
              <div class="countdown-item">
                <div class="countdown-value" id="hours">00</div>
                <div class="countdown-label">Horas</div>
              </div>
              <div class="countdown-item">
                <div class="countdown-value" id="minutes">00</div>
                <div class="countdown-label">Minutos</div>
              </div>
              <div class="countdown-item">
                <div class="countdown-value" id="seconds">00</div>
                <div class="countdown-label">Segundos</div>
              </div>
            </div>

            <p class="mb-4">
              El sitio volverá a estar disponible aproximadamente el <strong>25 de junio, 2023</strong>
            </p>

            <button class="btn-maintenance">
              <i class="fas fa-envelope me-1"></i> Notificarme cuando esté listo
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="maintenance-footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Nebura. Todos los derechos reservados.</p>
      <p class="small">Versión del sistema: v0.0.9</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Fecha estimada de finalización (25 de junio 2023, 12:00 PM)
      const endDate = new Date('2023-06-25T12:00:00').getTime();

      // Actualizar el contador cada segundo
      const countdown = setInterval(function () {
        const now = new Date().getTime();
        const distance = endDate - now;

        // Cálculos de tiempo
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Mostrar el resultado
        document.getElementById('days').textContent = days.toString().padStart(2, '0');
        document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
        document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
        document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');

        // Si el contador termina
        if (distance < 0) {
          clearInterval(countdown);
          document.querySelector('.countdown').innerHTML = `
            <div class="alert alert-success">
              <i class="fas fa-check-circle me-2"></i> ¡El mantenimiento ha finalizado! Actualiza la página.
            </div>
          `;
        }
      }, 1000);

      // Botón de notificación
      document.querySelector('.btn-maintenance').addEventListener('click', function () {
        alert('Te notificaremos por correo electrónico cuando el sitio esté disponible. ¡Gracias por tu paciencia!');
      });

      // Animación de partículas
      const particlesContainer = document.body;
      const particleCount = 15;

      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';

        // Tamaño aleatorio entre 2px y 8px
        const size = Math.random() * 6 + 2;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;

        // Posición aleatoria
        particle.style.left = `${Math.random() * 100}%`;
        particle.style.top = `${Math.random() * 100}%`;

        // Opacidad aleatoria
        particle.style.opacity = Math.random() * 0.4 + 0.1;

        // Añadir al contenedor
        particlesContainer.appendChild(particle);

        // Animación flotante
        animateParticle(particle);
      }

      function animateParticle(particle) {
        let x = parseFloat(particle.style.left);
        let y = parseFloat(particle.style.top);
        let xSpeed = (Math.random() - 0.5) * 0.02;
        let ySpeed = (Math.random() - 0.5) * 0.02;

        function move() {
          x += xSpeed;
          y += ySpeed;

          // Rebotar en los bordes
          if (x < 0 || x > 100) xSpeed *= -1;
          if (y < 0 || y > 100) ySpeed *= -1;

          particle.style.left = `${x}%`;
          particle.style.top = `${y}%`;

          requestAnimationFrame(move);
        }

        move();
      }
    });
  </script>
</body>

</html>