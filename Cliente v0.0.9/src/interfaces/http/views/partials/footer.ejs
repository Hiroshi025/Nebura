<style>
  /* Variables CSS mejoradas */
  :root {
    --footer-bg-gradient: linear-gradient(135deg, var(--card-bg-dark) 0%, #1a1e24 100%);
    --footer-accent-color: #6c5ce7;
    --footer-text-color: #a1a5b7;
    --footer-link-hover: var(--primary-color);
    --footer-divider-color: rgba(var(--primary-color-rgb), 0.2);
    --social-icon-size: 40px;
    --footer-title-underline: 2px;
    --card-bg-dark: #1e1e2d;
  }

  /* Footer Moderno */
  .footer-section {
    font-size: 0.95rem;
    border-top: 1px solid var(--footer-divider-color);
    background: var(--card-bg-dark);
    color: var(--footer-text-color);
    padding: 4rem 0 2rem;
    position: relative;
    overflow: hidden;
    margin-top: 15px;
    box-shadow: 0 -20px 50px rgba(0, 0, 0, 0.2);
  }

  /* Efecto de vidrio para modo claro */
  [data-bs-theme="light"] .footer-section {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(245, 245, 245, 0.9) 100%);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  /* Barra superior decorativa */
  .footer-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--footer-accent-color));
    z-index: 1;
  }

  /* Patrón de fondo sutil */
  .footer-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle at 1px 1px, rgba(255, 255, 255, 0.05) 1px, transparent 0);
    background-size: 20px 20px;
    opacity: 0.3;
    pointer-events: none;
  }

  /* Contenedor principal */
  .footer-container {
    position: relative;
    z-index: 2;
  }

  /* Logo y marca */
  .footer-brand {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease;
  }

  .footer-brand:hover {
    transform: translateY(-3px);
  }

  .footer-logo {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    margin-right: 15px;
    object-fit: contain;
    filter: drop-shadow(0 2px 5px rgba(0, 0, 0, 0.2));
    transition: transform 0.3s ease;
  }

  .footer-brand:hover .footer-logo {
    transform: rotate(5deg) scale(1.05);
  }

  .footer-brand-name {
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--primary-color);
    line-height: 1.2;
    text-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
  }

  .footer-brand-tagline {
    font-size: 0.8rem;
    color: var(--footer-text-color);
    opacity: 0.8;
    margin-top: 0.2rem;
  }

  .footer-description {
    font-size: 0.9rem;
    opacity: 0.8;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  /* Títulos de sección */
  .footer-title {
    color: var(--primary-color);
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
    text-transform: uppercase;
  }

  .footer-title::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -8px;
    width: 50px;
    height: var(--footer-title-underline);
    background: linear-gradient(90deg, var(--primary-color), var(--footer-accent-color));
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  .footer-title:hover::after {
    width: 70px;
  }

  /* Lista de enlaces */
  .footer-links {
    list-style: none;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.8rem;
    position: relative;
    padding-left: 15px;
    transition: all 0.3s ease;
  }

  .footer-links li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .footer-links li:hover {
    transform: translateX(5px);
  }

  .footer-links li:hover::before {
    opacity: 1;
  }

  .footer-link {
    color: var(--footer-text-color);
    text-decoration: none;
    opacity: 0.8;
    transition: all 0.3s ease;
    display: inline-block;
    position: relative;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--footer-link-hover);
    transition: width 0.3s ease;
  }

  .footer-link:hover {
    color: var(--footer-link-hover);
    opacity: 1;
    text-decoration: none;
  }

  .footer-link:hover::after {
    width: 100%;
  }

  /* Iconos sociales */
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-icon {
    width: var(--social-icon-size);
    height: var(--social-icon-size);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--primary-color-rgb), 0.1);
    color: var(--footer-text-color);
    font-size: 1rem;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
  }

  .social-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: 0.5s;
  }

  .social-icon:hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-5px) rotate(5deg);
    box-shadow: 0 5px 15px rgba(var(--primary-color-rgb), 0.3);
  }

  .social-icon:hover::before {
    left: 100%;
  }

  /* Sección de contacto */
  .footer-contact {
    list-style: none;
    padding: 0;
  }

  .footer-contact li {
    margin-bottom: 1rem;
    display: flex;
    align-items: flex-start;
    transition: transform 0.3s ease;
  }

  .footer-contact li:hover {
    transform: translateX(5px);
  }

  .footer-contact-icon {
    width: 20px;
    margin-right: 12px;
    color: var(--primary-color);
    font-size: 0.9rem;
    margin-top: 3px;
  }

  /* Newsletter */
  .newsletter {
    margin-top: 2rem;
  }

  .newsletter-input-group {
    position: relative;
  }

  .newsletter-input {
    background: rgba(255, 255, 255, 0.1) !important;
    border: 1px solid var(--footer-divider-color) !important;
    color: var(--footer-text-color) !important;
    border-radius: 50px !important;
    padding: 0.5rem 1.2rem !important;
    transition: all 0.3s ease;
  }

  .newsletter-input:focus {
    box-shadow: 0 0 0 0.25rem rgba(var(--primary-color-rgb), 0.25) !important;
    border-color: var(--primary-color) !important;
    background: rgba(255, 255, 255, 0.15) !important;
  }

  .newsletter-btn {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    height: calc(100% - 10px);
    border-radius: 50px !important;
    padding: 0 1.2rem !important;
    font-size: 0.8rem !important;
    transition: all 0.3s ease;
  }

  .newsletter-btn:hover {
    transform: translateY(-50%) scale(1.05);
  }

  /* Divider */
  .footer-divider {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--footer-divider-color), transparent);
    margin: 3rem 0;
    position: relative;
  }

  .footer-divider::after {
    content: '';
    position: absolute;
    left: 50%;
    top: -3px;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), var(--footer-accent-color));
    border-radius: 3px;
  }

  /* Copyright */
  .footer-copyright {
    font-size: 0.85rem;
    opacity: 0.7;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }

  .footer-legal-links {
    display: flex;
    gap: 1rem;
  }

  .footer-legal-link {
    color: var(--footer-text-color);
    text-decoration: none;
    opacity: 0.7;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer-legal-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--footer-link-hover);
    transition: width 0.3s ease;
  }

  .footer-legal-link:hover {
    color: var(--footer-link-hover);
    opacity: 1;
  }

  .footer-legal-link:hover::after {
    width: 100%;
  }

  .version-badge {
    background: var(--primary-color) !important;
    font-size: 0.7rem !important;
    padding: 0.25rem 0.6rem !important;
    border-radius: 50px !important;
    margin-left: 1rem;
    transition: all 0.3s ease;
  }

  .version-badge:hover {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 2px 8px rgba(var(--primary-color-rgb), 0.3);
  }

  /* Efecto de partículas decorativas */
  .footer-particle {
    position: absolute;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    pointer-events: none;
    z-index: 1;
  }

  /* Responsive Design */
  @media (max-width: 992px) {
    .footer-section {
      padding: 3rem 0 1.5rem;
    }

    .footer-brand {
      justify-content: center;
      text-align: center;
      flex-direction: column;
    }

    .footer-logo {
      margin-right: 0;
      margin-bottom: 1rem;
    }

    .footer-title {
      margin-top: 1.5rem;
    }

    .footer-title::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .footer-links li {
      padding-left: 0;
      text-align: center;
    }

    .footer-links li::before {
      display: none;
    }

    .social-links {
      justify-content: center;
    }

    .footer-contact li {
      justify-content: center;
    }

    .footer-copyright {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-legal-links {
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .social-icon {
      width: 35px;
      height: 35px;
      font-size: 0.9rem;
    }

    .footer-divider {
      margin: 2rem 0;
    }
  }

  /* Animaciones */
  @keyframes float {

    0%,
    100% {
      transform: translateY(0);
    }

    50% {
      transform: translateY(-10px);
    }
  }

  .floating-logo {
    animation: float 4s ease-in-out infinite;
  }
</style>

