<style>
  /* Sidebar Mejorado */
  .sidebar {
    background: var(--card-bg-dark);
    box-shadow: var(--box-shadow);
    border-radius: 1rem 0 0 1rem;
    min-width: 260px;
    max-width: 300px;
    display: flex;
    flex-direction: column;
    padding: 0;
    overflow: hidden;
    position: relative;
    transition: all 0.3s ease;
  }

  .sidebar-inner {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    padding: 2rem 1.5rem 1rem 1.5rem;
  }

  .sidebar-user {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--input-border-dark);
  }

  .sidebar-user-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--primary-color);
    background: #fff;
    transition: transform 0.2s;
  }

  .sidebar-user-avatar:hover {
    transform: scale(1.05);
  }

  .sidebar-user-info {
    flex: 1;
    min-width: 0;
  }

  .sidebar-user-name {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--primary-color);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .sidebar-user-tag {
    font-size: 0.95rem;
    color: var(--text-color-dark);
    opacity: 0.7;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .sidebar-section-title {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--primary-color);
    font-weight: 600;
    margin: 1.5rem 0 0.5rem 0.5rem;
    opacity: 0.8;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .sidebar-section-title i {
    font-size: 0.9rem;
  }

  .sidebar-nav {
    margin-bottom: 1.5rem;
  }

  .sidebar-nav .nav-link {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    color: var(--bs-body-color);
    border: none;
    background: none;
    font-weight: 500;
    font-size: 1.05rem;
    border-radius: 0.6rem;
    margin-bottom: 0.3rem;
    padding: 0.7rem 1rem;
    transition: all 0.2s ease;
    position: relative;
  }

  .sidebar-nav .nav-link:hover {
    background: rgba(var(--primary-color-rgb), 0.1);
    color: var(--primary-color);
  }

  .sidebar-nav .nav-link.active,
  .sidebar-nav .nav-link:focus {
    background: var(--primary-color);
    color: #fff;
    font-weight: 700;
    box-shadow: 0 2px 10px rgba(106, 90, 249, 0.2);
  }

  .sidebar-nav .nav-link .fa {
    min-width: 18px;
    text-align: center;
    font-size: 1.1rem;
  }

  .sidebar-divider {
    border-top: 1px solid var(--input-border-dark);
    margin: 1.5rem 0;
  }

  .sidebar-footer {
    padding: 1.2rem 1.5rem 1.5rem 1.5rem;
    border-top: 1px solid var(--input-border-dark);
    background: rgba(0, 0, 0, 0.03);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .sidebar-footer .btn {
    width: 100%;
    font-size: 1rem;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .sidebar-footer .theme-switcher {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    justify-content: space-between;
  }

  .sidebar-footer .form-switch .form-check-input {
    margin-left: 0;
    cursor: pointer;
  }

  .sidebar-footer .form-check-label {
    font-size: 1.1rem;
    color: var(--primary-color);
    cursor: pointer;
  }

  .language-switcher {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lang-link {
    color: var(--text-color-dark);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .lang-link:hover {
    color: var(--primary-color);
  }

  .lang-link.active {
    color: var(--primary-color);
  }

  /* Badge para notificaciones */
  .nav-badge {
    position: absolute;
    right: 1rem;
    background: var(--primary-color);
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    font-weight: bold;
  }

  /* Sección de Links */
  .sidebar-links {
    margin-bottom: 1.5rem;
  }

  .sidebar-links .link-item {
    display: flex;
    align-items: center;
    padding: 0.6rem 1rem;
    border-radius: 0.6rem;
    margin-bottom: 0.3rem;
    color: var(--text-color-dark);
    text-decoration: none;
    transition: all 0.2s;
  }

  .sidebar-links .link-item:hover {
    background: rgba(var(--primary-color-rgb), 0.1);
    color: var(--primary-color);
  }

  .sidebar-links .link-icon {
    width: 24px;
    text-align: center;
    margin-right: 0.7rem;
    color: var(--primary-color);
  }

  .sidebar-links .link-text {
    font-size: 0.95rem;
  }

  @media (max-width: 992px) {

    .sidebar-inner,
    .sidebar-footer {
      padding-left: 0.7rem;
      padding-right: 0.7rem;
    }

    .sidebar {
      min-width: 70px;
      max-width: 100vw;
    }

    .sidebar-user-name,
    .sidebar-user-tag,
    .sidebar-nav .nav-link span,
    .sidebar-links .link-text,
    .sidebar-section-title span {
      display: none;
    }

    .sidebar-section-title {
      justify-content: center;
      margin-left: 0;
      margin-right: 0;
    }

    .sidebar-nav .nav-link,
    .sidebar-links .link-item {
      justify-content: center;
      padding: 0.7rem 0.5rem;
    }

    .sidebar-footer .btn span {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .sidebar {
      border-radius: 0;
      min-width: 100vw;
      max-width: 100vw;
      flex-direction: row;
      height: auto;
    }

    .sidebar-inner,
    .sidebar-footer {
      padding: 1rem 0.5rem;
    }

    .sidebar-user {
      flex-direction: column;
      text-align: center;
      padding-bottom: 1rem;
    }

    .sidebar-nav,
    .sidebar-links {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 0.3rem;
    }

    .sidebar-nav .nav-link,
    .sidebar-links .link-item {
      border-radius: 0.4rem;
      margin-bottom: 0;
    }

    .sidebar-divider {
      margin: 1rem 0;
    }
  }

  /* Scrollbar personalizado */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--primary-color-hover);
    border-radius: 4px;
  }

  [data-bs-theme="light"] ::-webkit-scrollbar-thumb {
    background: var(--primary-color);
  }
</style>

