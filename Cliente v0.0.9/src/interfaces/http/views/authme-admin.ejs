          registerServerError: "An unexpected error occurred.",
          loginSuccess: "Login successful!",
          loginInvalid: "Invalid credentials.",
          loginNotAuthorized: "User not authorized.",
          loginServerError: "An unexpected error occurred."
        },
        es: {
          loginTitle: "Iniciar Sesión",
          loginSubtitle: "¡Bienvenido de nuevo!",
          registerTitle: "Crear Cuenta",
          registerSubtitle: "¡Únete a nuestra comunidad!",
          separatorText: "O con tu email",
          emailLabel: "Email",
          emailPlaceholder: "tu.email@ejemplo.com",
          passwordLabel: "Contraseña",
          passwordPlaceholder: "••••••••••",
