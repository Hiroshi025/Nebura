{
  // ============================================================================
  // SECCIÓN: Exclusión de archivos y carpetas del explorador de VSCode
  // ============================================================================
  "files.exclude": {
    "**/.git": true, // Carpeta de control de versiones Git
    "**/.svn": true, // Carpeta de control de versiones SVN
    "**/.hg": true, // Carpeta de control de versiones Mercurial
    "**/.DS_Store": true, // Archivo oculto de macOS
    "**/Thumbs.db": true, // Archivo oculto de Windows
    "**/.husky": true, // Carpeta de hooks de Husky
    "**/docs": true, // Carpeta de documentación
    "dist": true, // Carpeta de distribución (builds)
    "build": false, // Carpeta de builds
    "node_modules": true // Dependencias de Node.js
  },

  // ==========================================================================
  // SECCIÓN: Configuración del editor
  // ==========================================================================
  "editor.formatOnSave": true, // Formatea el archivo automáticamente al guardar
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Usa Prettier como formateador por defecto

  // Acciones automáticas al guardar
  "editor.codeActionsOnSave": {
    "source.fixAll": "always", // Aplica todas las correcciones posibles
    "source.organizeImports": "always", // Organiza automáticamente las importaciones
    "source.removeUnusedImports": "always" // Elimina importaciones no utilizadas automáticamente
  },

  // ==========================================================================
  // SECCIÓN: Sugerencias y validaciones para TypeScript y JavaScript
  // ==========================================================================
  // Opciones específicas para TypeScript
  "typescript.suggest.completeJSDocs": true, // Sugerir autocompletado de JSDoc
  "typescript.suggest.autoImports": true, // Sugerir importaciones automáticas
  "typescript.suggest.completeFunctionCalls": true, // Completar llamadas de función automáticamente
  "typescript.suggestionActions.enabled": true, // Habilitar acciones de sugerencia
  "typescript.tsserver.experimental.enableProjectDiagnostics": true, // Diagnósticos experimentales
  "typescript.check.npmIsInstalled": true, // Verifica si npm está instalado
  "typescript.validate.enable": true, // Habilita la validación de TypeScript
  "typescript.tsserver.log": "off", // Desactiva el log del servidor TS
  "typescript.tsserver.maxTsServerMemory": 4096, // Memoria máxima para el servidor TS (MB)
  "typescript.format.semicolons": "insert", // Inserta punto y coma al formatear
  "typescript.format.enable": true, // Habilita el formateo de TypeScript
  "typescript.experimental.expandableHover": true, // Hover expandible experimental
  "typescript.tsdk": "node_modules/typescript/lib", // Ruta al SDK de TypeScript local
  "typescript.format.indentSwitchCase": true, // Indentar casos de switch al formatear

  // Opciones para JavaScript
  "javascript.suggest.autoImports": true, // Sugerir importaciones automáticas en JS
  "javascript.suggest.completeFunctionCalls": true, // Completar llamadas de función en JS

  // ==========================================================================
  // SECCIÓN: Otros (exclusión de archivos para el watcher)
  // ==========================================================================
  // 'files.watcherExclude' evita que el watcher de VSCode observe cambios en estas rutas,
  // mejorando el rendimiento en proyectos grandes.
  "files.watcherExclude": {
    "**/node_modules/*": true, // Excluye dependencias de Node.js
    "**/dist/*": true, // Excluye archivos de distribución
    "**/build/*": true // Excluye archivos de build
  },

  // ==========================================================================
  // SECCIÓN: Configuración de Prettier
  // ==========================================================================
  "prettier.enableDebugLogs": true, // Activa los logs de depuración de Prettier
  "prettier.requireConfig": true,
  "[html]": {
    "editor.defaultFormatter": "j69.ejs-beautify"
  } // Requiere un archivo de configuración de Prettier
}
